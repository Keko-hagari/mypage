<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<table>
  <tr>
    <th>タイトル</th>
    <th>説明</th>
    <th>リンク</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><p><%= book.title %></p></td>
      <td><p><%= book.body %></p></td>
      <td>
        <%= link_to "show", book_path(book) %>
        <%= link_to "edit", edit_book_path(book)%>
        <%= link_to "DELETE", book_path(book), method: :delete%>
      </td>
    </tr>
  <% end %>
</table>

<%= form_with(model: @book,local: true) do |f| %>
  <p>タイトル<%= f.text_field :title %></p>
  <p>説明<%= f.text_field :body %></p>
  <%= f.submit "Create book"%>
<% end %>
